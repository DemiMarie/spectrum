insmod efi_gop

if [ "${grub_cpu}" == "x86_64" ]; then
  insmod efi_uga
fi

insmod font
loadfont /grub/fonts/unicode.pf2

insmod gfxterm
set gfxpayload=keep
terminal_output gfxterm
terminal_output console

menuentry "Install Spectrum" {
  set root=(hd0,gpt2)
  linux @linux@ @kernelParams@
  initrd @initrd@
}
