[Transfer]
Verify=yes

[Source]
Type=url-file
Path=@UPDATE_URL@
MatchPattern=Spectrum_@v_@u.verity

[Target]
Type=regular-file
Path=/host/updates
MatchPattern=Spectrum_@v_@u.verity
Mode=0644
