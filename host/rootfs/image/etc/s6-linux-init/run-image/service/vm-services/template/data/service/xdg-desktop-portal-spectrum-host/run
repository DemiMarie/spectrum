importas -i VM VM

export DBUS_SESSION_BUS_ADDRESS unix:path=/run/portal-bus/${VM}

if { mkdir -p /run/vsock/${VM} }
s6-ipcserver-socketbinder -a 0700 /run/vsock/${VM}/vsock_219

# Notify readiness.
if { fdmove 1 3 echo }
fdclose 3

xdg-desktop-portal-spectrum-host
