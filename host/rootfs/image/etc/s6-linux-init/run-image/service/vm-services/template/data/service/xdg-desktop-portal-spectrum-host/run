importas -i VM VM

export DBUS_SESSION_BUS_ADDRESS unix:path=/run/vm/by-id/${VM}/portal-bus

s6-ipcserver-socketbinder -a 0700 /run/vm/by-id/${VM}/vsock_219

# Notify readiness.
if { fdmove 1 3 echo }
fdclose 3

xdg-desktop-portal-spectrum-host
