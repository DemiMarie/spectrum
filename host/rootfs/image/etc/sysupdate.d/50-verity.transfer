[Transfer]
ProtectVersion=%A
Verify=yes

[Source]
Type=url-file
Path=file:///tmp/updates/snapshot
MatchPattern=spectrumOS_@v_@u.verity

[Target]
Type=partition
Path=auto
MatchPattern=spectrum-os_@v_verity
MatchPartitionType=root-verity
PartitionFlags=0
ReadOnly=1
