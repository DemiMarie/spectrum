[Transfer]
ProtectVersion=%A

[Source]
Type=url-file
Path=file:///run/updater
MatchPattern=Spectrum_@v.verity

[Target]
Type=partition
Path=auto
MatchPattern=Spectrum_@v.verity
MatchPartitionType=root-verity
PartitionFlags=0
ReadOnly=1
