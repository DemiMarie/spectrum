[Transfer]
ProtectVersion=%A

[Source]
Type=url-file
Path=file:///run/updater
MatchPattern=Spectrum_@v.efi

[Target]
Type=regular-file
Path=/EFI/Linux
PathRelativeTo=boot
MatchPattern=Spectrum_@v.efi
Mode=0644
InstancesMax=2
