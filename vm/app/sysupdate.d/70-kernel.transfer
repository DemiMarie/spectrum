[Transfer]
ProtectVersion=%A
Verify=yes

[Source]
Type=url-file
Path=file:///tmp/updates/
MatchPattern=spectrumOS_@v.efi

[Target]
Type=regular-file
PathRelativeTo=explicit
MatchPattern=spectrumOS_@v.efi
Mode=0644
