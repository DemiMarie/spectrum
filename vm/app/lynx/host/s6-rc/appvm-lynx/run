export WAYLAND_DISPLAY wayland-1
export XDG_RUNTIME_DIR /run/user/0

backtick -E pty {
  pipeline -w { jq -r .config.console.file }
  ch-remote --api-socket ../appvm-lynx-vmm/env/cloud-hypervisor.sock info
}

foot -T appvm-lynx --pty $pty
